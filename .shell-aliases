# Easier navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -="cd -"

# Overpowered Unix commands
alias ll='ls -lha'                  # ll -> ls with details and hidden files
alias ls='ls --color=auto'          # Colorized output for ls

alias reload='. $HOME/.bashrc'      # Source your bash config, Wow style :P

alias please='sudo'

# Program aliases
alias vi='vim'
alias g='git'
alias y='yadm'
